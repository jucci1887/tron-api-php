{
    "name": "jucci1887/tron-api",
    "version": "1.0.0",
    "description": "A PHP API for interacting with Tron (Trx)",
    "license": "MIT",
    "type":   "library",
    "homepage": "",
    "authors": [
        {
            "name": "Shamsudin Serderov",
            "email": "steein.shamsudin@gmail.com"
        }
    ],
    "keywords": [
        "jucci1887",
        "tron-lib",
        "tron-php",
        "tron-api",
        "tron-rest-api"
    ],

    "require": {
        "php": ">=7.4",
        "comely-io/data-types": "^1.0",
        "guzzlehttp/guzzle": "^6.0",
        "iexbase/web3.php": "^2.0.1",
        "kornrunner/secp256k1": "^0.1",
        "simplito/elliptic-php": "^1.0",
        "ext-json": "*",
        "ext-bcmath": "*"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "Jucci1887\\TronAPI\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Jucci1887\\TronAPI\\Test\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
